{
  "name": "avaliacao-testes-automatizados",
  "version": "1.0.0",
  "description": "Projeto de avaliação - Testes automatizados para aplicação web",
  "main": "src/js/app.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:system": "jest tests/system",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "http-server src -p 8080 -o"
  },
  "keywords": [
    "testes",
    "automatizados",
    "jest",
    "selenium",
    "webdriver",
    "qualidade-software"
  ],
  "author": "Grupo Avaliação",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "selenium-webdriver": "^4.15.0",
    "chromedriver": "^118.0.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}